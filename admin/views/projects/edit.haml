.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:projects, :index)
      %li=link_to pat(:new), url(:projects, :new)
      %li.active=link_to pat(:edit), url(:projects, :edit, :id => @project.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:project)
    .inner
      -form_for :project, url(:projects, :update, :id => @project.id), :method => :put, :class => :form do |f|
        =partial "projects/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")